{
  "name": "protocol-visualizer",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "eslint --fix \"**/*.{js,mjs,ts,tsx}\" && prettier --write \"**/*.{js,mjs,ts,tsx,md,json}\"",
    "format": "prettier --write \"**/*.{js,mjs,ts,tsx,md,json}\""
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.0.8",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "prettier": "^3.7.4",
    "turbo": "^2.7.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0"
  },
  "packageManager": "pnpm@9.15.9",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "pnpm": {
    "overrides": {
      "vite@>=5.0.0 <5.4.21": ">=5.4.21",
      "esbuild@<=0.24.2": ">=0.25.0"
    }
  }
}
